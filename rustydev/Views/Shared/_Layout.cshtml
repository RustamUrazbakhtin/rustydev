<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Rustam Urazbakhtin - .NET developer portfolio. Explore my projects, skills, and experience.">
    <meta name="keywords" content="Rustam Urazbakhtin, .NET Developer, ASP.NET MVC, C#, Full Stack, Portfolio">
    <meta name="author" content="Rustam Urazbakhtin">
    <meta name="robots" content="index, follow">
    <meta property="og:title" content="Rustam Urazbakhtin | .NET Developer Portfolio" />
    <meta property="og:description" content="Explore my skills and projects in web development using ASP.NET MVC, C#, and more." />
    <meta property="og:url" content="https://rustydev.onrender.com/" />
    <meta property="og:type" content="website" />

    <title>@ViewData["Title"] - rustydev</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/SiteSheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/rustydev.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/images/favicon.png" />

    <link rel="canonical" href="https://rustydev.onrender.com/" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt="RustyDev Logo" class="logo-img me-2"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Projects" asp-action="Index">Projects</a>
                        </li>
                    </ul>
                    <!-- TODO: Make authorization -->
                    <!--<partial name="_LoginPartial" />-->
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>© 2025 Rustam Urazbakhtin. All rights reserved.</p>
        <p>
          <a href="mailto:urazbakhtin.jobs@gmail.com">urazbakhtin.jobs@gmail.com</a> |
          <a href="tel:+16464921555">+1 (646) 492-1555</a>
        </p>
        <p>
          <a href="#about">About Me</a> |
          <a href="#skills">Skills</a> |
          <a href="#experience">Experience</a> |
          <a href="#education">Education</a>
        </p>
        <p style="font-style: italic; color: #555;">I create solutions for your success 🚀</p>
        <button onclick="window.scrollTo({top: 0, behavior: 'smooth'})" style="background: none; border: none; color: #007aff; cursor: pointer; font-weight: 600;">To the top ↑</button>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
